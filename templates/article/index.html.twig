{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<style>
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	<h1>Liste de articles</h1>
	
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Titre</th>
				<th scope="col">Description</th>
				<th scope="col">Auteur</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
			<tr>
				<th scope="row">{{article.id}}</th>
				<td>{{article.titre}}</td>
				<td>{{article.description}}</td>
				<td>{{article.auteur}}</td>
				<td><a href="{{ path('read', { 'id':article.id }) }}">Lire</a></td>
				<td><a href="{{ path('modif', { 'id':article.id }) }}">Modifier</a></td>
				<td><a href="{{ path('del', { 'id':article.id }) }}" onclick="return confirm('Etes-vous sur de vouloir supprimer cet article ?')">Supprimer</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}

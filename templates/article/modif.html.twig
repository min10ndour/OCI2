{% extends 'base.html.twig' %}

{% block title %}
Modifier
{% endblock %}


{% block body %}
<div style="text-align: center">
  <h1>Modifier un article</h1>
  <form style="display: inline-block" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="titre">Titre</label>
        <input type="text" class="form-control" name="titre" id="titre" placeholder="Titre de l'article" value="{{ article.titre }}">
      </div>
      <div class="form-group col-md-6">
        <label for="auteur">Auteur</label>
        <input type="text" class="form-control" name="auteur" id="auteur" placeholder="Auteur" value="{{ article.auteur }}">
      </div>
    </div>
    <div class="form-group">
      <label for="descript">Description</label>
      <input type="text" class="form-control" name="descript" id="descript" placeholder="Description" value="{{ article.description }}">
    </div>
    <div class="form-group col-md-15">
      <label for="contenu">Contenu</label>
      <textarea class="form-control" name="contenu" id="contenu" cols="30" rows="10" placeholder="Contenu de l'article">{{ article.contenu }}</textarea>
      <!-- <input type="text" class="form-control" id="contenu" placeholder="Contenu de l'article"> -->
    </div>
    <div class="form-group col-md-15">
      <label for="date">Date</label>
      <input class="form-control" name="date" id="date" value="{{ date }}" readonly="readonly">
    </div>
    <button type="submit" name="modifier" class="btn btn-primary">Modifier</button>
  </form>
</div>
{% endblock %}


